@using Microsoft.AspNetCore.Html
@model DotnetTestingWebApp.Models.Product

@{
    ViewData["Title"] = "Produk Page | Edit";
}

@await Component.InvokeAsync(
    "PageHeader", 
    new { 
        PageTitle = $"Edit Data | {Model.Name}", 
        breadcrumb = new List<(string, string, string)>
        {
            ("Home", "Index", "Home"),
            ("Produk", "Index", "Product"),
            ("Edit Data", "", "")
        }
    }
)
<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <card-layout title="Edit Produk">
							<form asp-action="Edit" method="post" id="formProccess">
                                @await Html.PartialAsync("Components/_FormInput", new ViewDataDictionary(ViewData) { { "Label", "Nama Produk" }, { "Name", "Name" }, { "Attributes", $"type=\"text\" placeholder=\"Masukan nama produk\" data-test=\"123\" autofocus=\"true\" autocomplete=\"off\" value=\"{Model.Name}\" required" } })
                                @await Html.PartialAsync("Components/_FormInput", new ViewDataDictionary(ViewData) { { "Label", "Harga Produk" }, { "Name", "Price" }, { "Attributes", $"type=\"text\" placeholder=\"Masukan harga produk\" autocomplete=\"off\" value=\"{Model.Price}\" required" } })

                                @await Html.PartialAsync("Components/_SubmitSave")
                            </form>
                </card-layout>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/helpers/js/form-handler.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
    handleFormSubmission({
        formSelector: '#formProccess',
        buttonSelector: '#btnSave'
    });
    </script>
}