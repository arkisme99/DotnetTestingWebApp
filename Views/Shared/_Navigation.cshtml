@using System.Globalization
@using Microsoft.Extensions.Localization
@using System.Security.Claims
@inject IStringLocalizer<SharedResource> Localizer
@{
    var roles = User.Claims
    .Where(c => c.Type == ClaimTypes.Role)
    .Select(c => c.Value)
    .ToList();
}

<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="javascript:;" aria-expanded="false">
                <i class="far fa-bell"></i> <span class="badge badge-danger navbar-badge notification-count">0</span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right" style="left: inherit; right: 0px;"
                id="notification-bell">
                <span class="dropdown-item dropdown-header"><span class="notification-count">0</span>
                    Notifications</span>
                <div class="dropdown-divider"></div>
                <div id="notification-list">
                    @* <a href="#" class="dropdown-item">
                        <i class="fas fa-envelope mr-2"></i> 4 new messages
                        <span class="float-right text-muted text-sm">3 mins</span>
                    </a> *@
                </div>
            </div>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="javascript:void(0)">
                @CultureInfo.CurrentUICulture.Name.ToUpper()
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <a asp-controller="Home" asp-action="SetLanguage" asp-route-culture="id"
                    asp-route-returnUrl="@Context.Request.Path" class="dropdown-item">
                    ID | Indonesia
                </a>
                <div class="dropdown-divider"></div>
                <a asp-controller="Home" asp-action="SetLanguage" asp-route-culture="en"
                    asp-route-returnUrl="@Context.Request.Path" class="dropdown-item">
                    EN | English
                </a>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:;" id="darkModeToggle">
                <i class="fas fa-moon"></i>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:;" data-toggle="modal" data-target="#logoutModal">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </li>
    </ul>
</nav>

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a class="brand-link" asp-area="" asp-controller="Home" asp-action="Index">
        <img src="~/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
            style="opacity: .8">
        <span class="brand-text font-weight-light">Testing App</span>
    </a>
    <div class="sidebar">
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/dist/img/avatar5.png" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info text-wrap">
                <a href="javascript:void(0)" class="d-block">@User.Identity?.Name</a>
                <p>@string.Join(", ", roles)</p>
            </div>
        </div>

        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a class="nav-link @(Context.Request.Path.StartsWithSegments("/home") | Context.Request.Path.StartsWithSegments("/") ? "active" : "")"
                        asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="nav-icon fas fa-home"></i>
                        <p>
                            @Localizer["MenuBeranda"]
                        </p>
                    </a>
                </li>

                @if (User.HasClaim("Permission", "ViewUser") || User.HasClaim("Permission", "ViewRole"))
                {
                    <li
                        class="nav-item @(Context.Request.Path.StartsWithSegments("/user") || Context.Request.Path.StartsWithSegments("/role") ? "menu-open" : "")">
                        <a href="javascript:void(0)"
                            class="nav-link @(Context.Request.Path.StartsWithSegments("/user") || Context.Request.Path.StartsWithSegments("/role") ? "active" : "")">
                            <i class="nav-icon fas fa-users"></i>
                            <p>
                                @Localizer["MenuUser"] <i class="fas fa-angle-left right"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            @if (User.HasClaim("Permission", "ViewRole"))
                            {
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="Role" asp-action="Index"
                                        class="nav-link @(Context.Request.Path.StartsWithSegments("/role") ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>@Localizer["MenuRole"]</p>
                                    </a>
                                </li>
                            }
                            @if (User.HasClaim("Permission", "ViewUser"))
                            {
                                <li class="nav-item">
                                    <a asp-area="" asp-controller="User" asp-action="Index"
                                        class="nav-link  @(Context.Request.Path.StartsWithSegments("/user") ? "active" : "")">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>@Localizer["MenuUser"]</p>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                }

                @if (User.HasClaim("Permission", "ViewProduct"))
                {
                    <li class="nav-item">
                        <a class="nav-link @(Context.Request.Path.StartsWithSegments("/product") ? "active" : "")"
                            asp-area="" asp-controller="Product" asp-action="Index">
                            <i class="nav-icon fas fa-list-alt"></i>
                            <p>
                                @Localizer["MenuProduk"]
                            </p>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</aside>