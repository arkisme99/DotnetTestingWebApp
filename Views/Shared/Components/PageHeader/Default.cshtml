@{
    var crumbs = (List<(string label, string action, string controller)>)ViewData["Breadcrumb"]!;
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@ViewData["PageTitle"]</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @foreach (var item in crumbs)
                    {
                        if (!string.IsNullOrEmpty(item.action))
                        {
                            <li class="breadcrumb-item">
                                <a asp-controller="@item.controller" asp-action="@item.action">@item.label</a>
                            </li>
                        }
                        else
                        {
                            <li class="breadcrumb-item active">@item.label</li>
                        }
                    }
                </ol>
            </div>
        </div>
    </div>
</div>
