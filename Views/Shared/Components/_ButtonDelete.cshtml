@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    var controllerName = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var permissionName = $"Delete{controllerName}";
}
@if (User.HasClaim("Permission", permissionName))
{
    <a class="dropdown-item delete-record" href="javascript:;" data-id="@ViewData["DataId"]"
        data-title="@ViewData["DataTitle"]"><i class="fas fa-trash"></i> @Localizer["HapusData"]</a>
}